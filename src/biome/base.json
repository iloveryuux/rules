{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": ["dist", "node_modules"]
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "css": {
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "lineEnding": "lf",
      "indentStyle": "space"
    },
    "parser": {
      "cssModules": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "none",
      "quoteProperties": "asNeeded",
      "lineEnding": "lf",
      "arrowParentheses": "asNeeded",
      "attributePosition": "multiline",
      "bracketSameLine": true,
      "indentStyle": "space",
      "jsxQuoteStyle": "single",
      "bracketSpacing": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "lineEnding": "lf",
      "trailingCommas": "none"
    }
  }
}
