{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "branchPrefix": "renovate/",
  "timezone": "Africa/Casablanca",
  "commitMessagePrefix": "chore(deps): ",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}} to {{newVersion}}",
  "commitMessageSuffix": "[skip ci]",
  "prCreation": "immediate",
  "prHourlyLimit": 10,
  "prConcurrentLimit": 20,
  "dependencyDashboard": true,
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "merge-commit",
  "requiredStatusChecks": null,
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "description": "Enable automerge for minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Disable automerge for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Group all non-major dependencies together",
      "matchPackagePatterns": ["*"],
      "groupName": "all non-major dependencies",
      "automerge": true
    }
  ],
  "labels": ["dependencies"],
  "schedule": ["before 3am on Monday"],
  "masterIssue": true,
  "rebaseWhen": "behind-base-branch",
  "rollbackPrs": true,
  "prBodyNotes": [
    "### ðŸš€ Autogenerated by [Renovate Bot](https://renovatebot.com/)"
  ],
  "onboardingConfig": {
    "extends": ["config:base"]
  },
  "stabilityDays": 3,
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "separateMinorPatch": false,
  "platformAutomerge": true
}
